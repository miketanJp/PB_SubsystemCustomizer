<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="5.0"
      fx:controller="it.miketan.pb.serializer.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER">
        <ImageView fx:id="imageView" fitHeight="200" fitWidth="200" layoutX="10" layoutY="10">
            <Image url="@../../../../assets/pb_logo_alt.png"/>
        </ImageView>
    </HBox>
    <HBox alignment="BASELINE_CENTER">
        <Text fx:id="versionText"/>
    </HBox>

    <HBox spacing="10">
        <Text>Projectile magazine</Text>
        <TextField fx:id="actCountField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Fire time length</Text>
        <TextField fx:id="actDurationField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Heat per use</Text>
        <TextField fx:id="heatField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Mass</Text>
        <TextField fx:id="massField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Scrap value</Text>
        <TextField fx:id="scrapValueField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon concussion</Text>
        <TextField fx:id="wpnConcussionField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon damage</Text>
        <TextField fx:id="wpnDamageField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Damage Radius</Text>
        <TextField fx:id="wpnDamageRadiusField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Impact</Text>
        <TextField fx:id="wpnImpactField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Impact Radius</Text>
        <TextField fx:id="wpnImpactRadiusField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Projectile Lifetime</Text>
        <TextField fx:id="wpnProjLifeTimeField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Projectile Ricochet</Text>
        <TextField fx:id="wpnProjRicochetField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Range (max)</Text>
        <TextField fx:id="wpnRangeMaxField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Range (min)</Text>
        <TextField fx:id="wpnRangeMinField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Scatter Angle</Text>
        <TextField fx:id="wpnScatterAngleField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Weapon Scatter Angle (Moving)</Text>
        <TextField fx:id="wpnScatterAngleMovingField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10">
        <Text>Projectile Speed</Text>
        <TextField fx:id="wpnSpeedField" maxWidth="80" onKeyPressed="#onInput"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#onSaveBtnClick"/>
        <Button text="Import" onAction="#onLoadBtnClick"/>
        <Button text="Copy to clipboard" onAction="#copyToClipboard"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Text fx:id="hiddenText" visible="false"/>
    </HBox>

    <HBox alignment="BOTTOM_CENTER">
        <Text>Â©2025 Michele Paolucci A.K.A. MiketanJp - Software under BSD-3 License</Text>
    </HBox>
</VBox>
